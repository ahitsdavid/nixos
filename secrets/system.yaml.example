# System Secrets Template
# Copy this to system.yaml and edit with your actual values
# Run: cp system.yaml.example system.yaml && sops system.yaml

# WiFi networks - useful for laptop users
wifi:
  home_network: "your_home_wifi_password_here"
  work_network: "your_work_wifi_password_here"
  mobile_hotspot: "your_phone_hotspot_password_here"

# VPN credentials  
vpn:
  work_config: |
    # Your VPN configuration file content
    # This could be OpenVPN config, WireGuard keys, etc.
  
# SSH keys for system services (not your personal keys)
ssh:
  backup_key: |
    -----BEGIN OPENSSH PRIVATE KEY-----
    # Private key for automated backup services
    # Your actual SSH private key content here
    -----END OPENSSH PRIVATE KEY-----
    
  deploy_key: |
    -----BEGIN OPENSSH PRIVATE KEY-----  
    # Deploy key for pulling private repos
    -----END OPENSSH PRIVATE KEY-----

# System service credentials
services:
  database_password: "secure_database_password"
  backup_passphrase: "encryption_passphrase_for_backups"